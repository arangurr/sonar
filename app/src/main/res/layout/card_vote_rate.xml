<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
      android:id="@+id/textview_card_rate_vote_title"
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"
      android:background="@color/colorAccentIntermediateLight"
      android:elevation="2dp"
      android:gravity="center"
      android:minHeight="?android:attr/actionBarSize"
      tools:text="1 of 3"/>

    <TextView
      android:id="@+id/textview_card_rate_vote_content"
      style="@style/TextAppearance.AppCompat.Body1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:padding="24dp"
      android:gravity="center"
      tools:text="Super duper long text with a lot of text. It should not fit in a single line."/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:padding="24dp"
      android:gravity="center"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/textview_card_rate_vote_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"/>
      <SeekBar
        android:id="@+id/seekbar_card_rate_vote"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:max="4"
        tools:progress="2"/>
      <TextView
        android:id="@+id/textview_card_rate_vote_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5"/>
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>
