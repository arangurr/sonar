  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
      android:id="@+id/viewpager_voting"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:paddingStart="60dp"
      android:paddingEnd="60dp"
      android:clipToPadding="false"
      app:layout_constraintBottom_toTopOf="@+id/button_voting_previous"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/button_voting_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginRight="16dp"
      android:onClick="onClick"
      android:src="@drawable/ic_navigate_next_24dp"
      android:text="Next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/button_voting_previous"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:onClick="onClick"
      android:src="@drawable/ic_navigate_before_24dp"
      android:text="Previous"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
      android:id="@+id/textview_voting_position"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@+id/button_voting_previous"
      app:layout_constraintLeft_toRightOf="@+id/button_voting_previous"
      app:layout_constraintRight_toLeftOf="@+id/button_voting_next"
      app:layout_constraintTop_toTopOf="@+id/button_voting_previous"
      app:layout_constraintVertical_bias="0.5"
      tools:text="Question 1 of 3"/>

  </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
