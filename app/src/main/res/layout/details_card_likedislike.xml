<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/include"
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:id="@+id/linearlayout_details_item_progress"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:orientation="horizontal"
      android:visibility="gone"
      tools:background="@color/teal_200"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal">
      <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="12dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/ic_thumb_down_24dp"/>

      <TextView
        android:id="@+id/textview_details_item_count1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_person_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="8"/>
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"/>
      <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="12dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/ic_thumb_up_24dp"/>

      <TextView
        android:id="@+id/textview_details_item_count2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_person_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="21"/>
    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>