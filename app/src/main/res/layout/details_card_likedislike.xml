<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/include"
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:id="@+id/linearlayout_details_item_progress"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:orientation="horizontal"
      tools:background="@color/teal200"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal">
      <TextView
        android:id="@+id/textview_details_item_likedislike_dislike_counter"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableEnd="@drawable/ic_thumb_down_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical|start"
        android:minHeight="@dimen/item_height_small"
        android:textAlignment="textStart"
        tools:text="15"/>
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"/>
      <TextView
        android:id="@+id/textview_details_item_likedislike_like_counter"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_thumb_up_24dp"
        android:gravity="center_vertical|end"
        android:minHeight="@dimen/item_height_small"
        android:textAlignment="textEnd"
        tools:text="32"/>
    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>