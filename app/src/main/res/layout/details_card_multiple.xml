<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <ViewSwitcher
      android:id="@+id/viewswitcher_item_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:measureAllChildren="false">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
          android:id="@+id/linearlayout_details_item_progress"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_gravity="top"
          android:alpha="0.5"
          tools:background="@color/teal_200"
          android:orientation="horizontal"
          android:visibility="gone"
          tools:visibility="visible"/>
        <TextView
          android:id="@+id/textview_item_card_summary"
          style="@android:style/TextAppearance.Material.Medium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:gravity="center_vertical"
          android:minHeight="@dimen/item_height_small"
          tools:text="Summary"/>
      </FrameLayout>
      <LinearLayout
        android:id="@+id/linearlayout_item_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        android:showDividers="middle"/>
    </ViewSwitcher>
  </LinearLayout>

</android.support.v7.widget.CardView>