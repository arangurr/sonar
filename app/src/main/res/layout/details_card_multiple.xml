<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/include"
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <ViewSwitcher
      android:id="@+id/viewswitcher_item_card_rate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:measureAllChildren="false">

      <TextView
        android:id="@+id/textview_item_card_rate_summary"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/item_height_small"
        tools:text="Summary"/>
      <LinearLayout
        android:id="@+id/linearlayout_item_card_rate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"/>
    </ViewSwitcher>
  </LinearLayout>

</android.support.v7.widget.CardView>