<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/include"
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:id="@+id/linearlayout_details_item_progress"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:orientation="horizontal"
      android:visibility="gone"
      tools:background="@color/teal_200"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_details_item_binary_option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="12dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        tools:text="option1"/>
      <TextView
        android:id="@+id/textview_details_item_count1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_group"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="8"/>
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"/>
      <TextView
        android:id="@+id/textview_details_item_binary_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="12dp"
        android:gravity="center_vertical"
        tools:text="option2"/>
      <TextView
        android:id="@+id/textview_details_item_count2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_group"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="21"/>
    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>