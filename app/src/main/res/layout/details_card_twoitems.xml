<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/include"
      layout="@layout/details_card_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:id="@+id/linearlayout_details_item_progress"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:orientation="horizontal"
      android:visibility="gone"
      tools:background="@color/teal_200"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipToPadding="false">

      <TextView
        android:id="@+id/textview_details_item_binary_option1"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical|start"
        android:minHeight="@dimen/item_height_small"
        android:textAlignment="textStart"
        tools:text="option1"/>
      <TextView
        android:id="@+id/textview_details_item_binary_option1_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="12"
        android:textAlignment="center"/>
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"/>
      <TextView
        android:id="@+id/textview_details_item_binary_option2_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="21"
        android:textAlignment="center"/>
      <TextView
        android:id="@+id/textview_details_item_binary_option2"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical|end"
        android:minHeight="@dimen/item_height_small"
        android:textAlignment="textEnd"
        tools:text="option2"/>
    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>