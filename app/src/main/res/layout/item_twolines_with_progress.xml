<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="8dp"
  android:orientation="vertical"
  tools:layout_editor_absoluteX="0dp"
  tools:layout_editor_absoluteY="81dp">

  <TextView
    android:id="@android:id/text1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@android:id/text2"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Option name"/>
  <TextView
    android:id="@android:id/text2"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:drawablePadding="8dp"
    android:drawableRight="@drawable/ic_person_24dp"
    android:gravity="center_vertical"
    android:textAppearance="?android:attr/textAppearanceSmall"
    app:layout_constraintBaseline_toBaselineOf="@android:id/text1"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteY="16dp"
    tools:text="8"/>
  <ProgressBar
    android:id="@+id/progressbar_item_card_option_progress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:progressTint="@color/colorPrimaryIntermediate"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@android:id/text1"
    tools:progress="50"/>

</android.support.constraint.ConstraintLayout>