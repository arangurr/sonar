<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/list_top_margin"
  android:paddingBottom="@dimen/list_top_margin"
  android:paddingStart="@dimen/item_start_margin"
  android:paddingEnd="@dimen/item_end_margin"
  android:background="@color/colorPrimaryDark"
  android:minHeight="@dimen/item_height_small"
  android:textColorHint="@color/colorPrimaryLight">

  <android.support.design.widget.TextInputEditText
    android:id="@+id/edittext_editor_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/poll_title"
    android:imeOptions="flagNoExtractUi|actionDone"
    android:inputType="text|textCapSentences|textAutoCorrect"
    android:selectAllOnFocus="true"
    android:textColor="@color/colorPrimaryTextDark"
    tools:text="This is a very long title that should not fit in a single line. Blablabla. "/>
</android.support.design.widget.TextInputLayout>

