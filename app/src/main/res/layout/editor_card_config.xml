<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/settings_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="?attr/actionBarSize"
  android:layout_gravity="top"
  android:visibility="invisible"
  app:cardElevation="2dp"
  app:contentPadding="8dp"
  tools:visibility="visible">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
      android:id="@+id/checkbox_card_config_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:text="@string/password"
      android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <EditText
      android:id="@+id/edittext_card_config_password"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="8dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:hint="@string/password"
      android:inputType="textVisiblePassword"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:textSize="16sp"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="@+id/checkbox_card_config_password"
      app:layout_constraintLeft_toRightOf="@+id/checkbox_card_config_password"
      app:layout_constraintRight_toLeftOf="@+id/imagebutton_card_config_privacy"
      app:layout_constraintTop_toTopOf="@+id/checkbox_card_config_password"/>

    <ImageButton
      android:id="@+id/imagebutton_card_config_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:background="?android:attr/selectableItemBackgroundBorderless"
      android:onClick="showHelpDialog"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_help_outline"/>
    <ImageButton
      android:id="@+id/imagebutton_card_config_privacy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:background="?android:attr/selectableItemBackgroundBorderless"
      android:onClick="showHelpDialog"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imagebutton_card_config_password"
      app:srcCompat="@drawable/ic_help_outline"/>
    <TextView
      android:id="@+id/textview_card_config_privacy_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingStart="4dp"
      android:paddingEnd="4dp"
      android:drawablePadding="12dp"
      android:text="@string/vote_privacy"
      android:textAppearance="@style/TextAppearance.AppCompat.Button"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="@+id/checkbox_card_config_password"
      app:layout_constraintTop_toTopOf="@+id/spinner_card_config_privacy"
      tools:drawableStart="@drawable/ic_public"/>
    <Spinner
      android:id="@+id/spinner_card_config_privacy"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="8dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:entries="@array/array_privacy_intervals"
      android:textSize="?android:attr/textAppearanceSmall"
      app:layout_constraintBottom_toBottomOf="@+id/imagebutton_card_config_privacy"
      app:layout_constraintLeft_toRightOf="@+id/checkbox_card_config_password"
      app:layout_constraintRight_toLeftOf="@+id/imagebutton_card_config_privacy"
      app:layout_constraintTop_toBottomOf="@+id/imagebutton_card_config_password"/>


    <Button
      android:id="@+id/button_card_config_ok"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onClick"
      android:text="@android:string/ok"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imagebutton_card_config_privacy"/>
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>