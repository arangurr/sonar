<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/settings_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="?attr/actionBarSize"
  android:layout_gravity="top"
  android:visibility="invisible"
  app:cardElevation="2dp"
  app:contentPadding="8dp"
  tools:visibility="gone">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <TextView
      android:id="@+id/textview_card_config_password"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:minHeight="@dimen/item_height_small"
      android:text="@string/card_config_password_description"
      android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/switch_card_config_password"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"/>

    <Switch
      android:id="@+id/switch_card_config_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:minHeight="@dimen/item_height_small"
      android:text="Password"
      android:textColor="@color/colorSecondaryText"
      android:thumbTextPadding="16dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textview_card_config_password"/>

    <EditText
      android:id="@+id/edittext_card_config_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="Password"
      android:inputType="textVisiblePassword"
      android:visibility="gone"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_card_config_password"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:visibility="visible"/>

    <TextView
      android:id="@+id/textview_card_config_privacy_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:minHeight="@dimen/item_height_small"
      android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/spinner_card_config_privacy"
      app:layout_constraintTop_toBottomOf="@+id/edittext_card_config_password"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:text="Another long text view. This one is shorter though."/>
    <Spinner
      android:id="@+id/spinner_card_config_privacy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:entries="@array/array_privacy_intervals"
      android:minHeight="@dimen/item_height_small"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textview_card_config_privacy_description"/>
    <Button
      android:id="@+id/button_card_config_ok"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:onClick="onClick"
      android:text="@android:string/ok"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_card_config_privacy_description"/>
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>