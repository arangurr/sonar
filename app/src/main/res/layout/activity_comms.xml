<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.arangurr.newsonar.ui.DetailsActivity">

  <TextView
    android:id="@+id/textview_comms_duration"
    style="@style/TextAppearance.AppCompat.Body1"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:paddingStart="16dp"
    android:gravity="center_vertical"
    android:text="Make poll available for..."
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/spinner_comms_duration"
    app:layout_constraintTop_toTopOf="parent"
    tools:drawableEnd="@drawable/ic_warning_24dp"/>

  <Spinner
    android:id="@+id/spinner_comms_duration"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginEnd="8dp"
    android:entries="@array/array_publish_durations"
    app:layout_constraintRight_toLeftOf="@+id/toggle_comms"
    app:layout_constraintTop_toTopOf="@+id/textview_comms_duration"/>

  <ViewSwitcher
    android:id="@+id/viewswitcher_comms"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textview_comms_duration">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview_comms"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:listitem="@android:layout/simple_list_item_1"/>

    <LinearLayout
      android:id="@+id/linearlayout_comms_status"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center">
      <ProgressBar
        android:id="@+id/progressbar_comms_status"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible"/>
      <TextView
        android:id="@+id/textview_comms_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        tools:text="Publishing and listening..."/>
    </LinearLayout>

  </ViewSwitcher>

  <ToggleButton
    android:id="@+id/toggle_comms"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:textOff="Off"
    android:textOn="On"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/spinner_comms_duration"
    tools:checked="true"/>

</android.support.constraint.ConstraintLayout>
