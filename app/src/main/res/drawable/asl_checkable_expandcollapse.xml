<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/expanded"
    android:drawable="@drawable/ic_arrow_up_24dp"
    android:state_selected="true"/>

  <item
    android:id="@+id/collapsed"
    android:drawable="@drawable/ic_arrow_down_24dp"/>

  <transition
    android:drawable="@drawable/avd_collapse_to_expand"
    android:fromId="@id/collapsed"
    android:toId="@id/expanded"/>

  <transition
    android:drawable="@drawable/avd_expand_to_collapse"
    android:fromId="@id/expanded"
    android:toId="@id/collapsed"/>

</animated-selector>